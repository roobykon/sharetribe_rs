            .col-6
              %ul
                - part_custom_field_value.each do |custom_field_value|
                  %li
                    - custom_field_value.with_type do |question_type|
                      = render :partial => "listings/custom_field_partials/#{question_type}", :locals => { :custom_field_value => custom_field_value }

