      .row
        .col-12
          %h3.title
            = 'popular listings'
      - if @listings.total_entries > 0
        .row.no-margin
          .col-12
            .home-fluid-thumbnail-grid-wide
              .home-fluid-thumbnail-grid.row.no-margin
