              .title
                = 'Loft'
        .col-4
          .space-box
            = link_to '#', class: 'shadow-effect' do
              .img-wrap
                = image_tag("content/04.jpg")
              .title
                = 'House'
        .col-4
          .space-box
            = link_to '#', class: 'shadow-effect' do
              .img-wrap
                = image_tag("content/05.jpg")
              .title
                = 'Other'
      .row.no-margin
        .col-12.text-center
          %button.button.btn-blue
            = 'More'

  %section.listings
